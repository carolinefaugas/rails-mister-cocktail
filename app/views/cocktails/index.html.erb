<div class="container">
  <h1 class="row justify-content-center">Your cocktails 🍹</h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-3">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
        <div class="card-body">
          <h5 class="card-title"><%= cocktail.name %></h5>
          <a href="<%= cocktail_path(cocktail) %>" class="btn btn-primary">More details...</a>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row">
    <p><%= link_to '+ Add a new cocktail', new_cocktail_path %></p>
  </div>
</div>
